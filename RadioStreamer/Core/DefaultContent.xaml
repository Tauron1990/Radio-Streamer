<UserControl x:Class="Tauron.Application.RadioStreamer.Core.DefaultContent"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:hlp="http://schemas.Tauron-Hobby-Studio.org/xaml/presentation"
			 xmlns:contracts="clr-namespace:Tauron.Application.RadioStreamer.Contracts;assembly=Tauron.Application.RadioStreamer.Contracts"
			 mc:Ignorable="d" 
			 d:DesignHeight="300" d:DesignWidth="300"
			 hlp:DataContextServices.Activate="True"
			 hlp:CompositionServices.ImportViewModel="{x:Static contracts:AppConstants.DefaultContentViewModel}">
	<DockPanel>
		<ContentControl Content="{StaticResource MainLabel}" DockPanel.Dock="Top"/>
		<StatusBar DockPanel.Dock="Bottom" MinHeight="30" MaxHeight="30" ItemsSource="{Binding StatusBarItems}"/>
		<TabControl Name="RadioSelector" SelectionChanged="TabControlSelectionChanged" x:FieldModifier="private">
			<TabItem Header="Radio Manager" hlp:ViewManager.ImportView="{x:Static contracts:AppConstants.RadioManagerView}"/>
			<TabItem Header="Radio Player" hlp:ViewManager.ImportView="{x:Static contracts:AppConstants.RadioView}"/>
		</TabControl>
	</DockPanel>
</UserControl>
